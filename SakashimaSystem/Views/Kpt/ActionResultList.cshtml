@using SakashimaSystem.Models.Kpt
@model ActionListModel
@{
    ViewData["Title"] = "アクションプラン 一覧画面";
}
@section TitleLink {
    <a class="navbar-brand" href="/Login/index/@Model.BoardId"><img style="width:150px;" src="/lib/rogo.png"></a>
}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 ">
    <div class="col-md-12 col-12">
        <div class="text-left">
            <h4>アクションプラン  一覧画面</h4>
        </div>
    </div>
</div>
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 ">
    <div class="col-md-10 col-10">
        <div class="table-responsive">
            <table class="table table-striped table-sm table-bordered table-linked-rows">
                <thead>
                    <tr>
                        <th>アクションタイトル</th>
                        <th>アクション詳細</th>
                        <th>担当者</th>
                        <th>実施時期</th>
                    </tr>
                </thead>
                <tbody id="sortdata">
                    @foreach (var item in Model.ActionList)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Assigned</td>
                            <td>@item.Period</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

